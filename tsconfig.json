{
  "compilerOptions": {
    "esModuleInterop": true,
    "target": "es6",
    "module": "ES6",
    "lib": ["es5", "es6", "dom"],
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "lib",
    "strict": true,
    "strictNullChecks": false,
    "baseUrl": "src",
    "declaration": true,
    "paths": {
      "*": ["node_modules/*"]
    },
    "strictPropertyInitialization": false,
    "allowJs": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "lib"]
}
